<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/user_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Логин: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Роль: "
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_make_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сделать админом" />

    <Button
        android:id="@+id/btn_make_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сделать пользователем" />

    <Button
        android:id="@+id/btn_view_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Просмотреть последние билеты по маршрутам" />
</LinearLayout>
